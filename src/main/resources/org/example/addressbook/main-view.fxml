<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="scenePane" prefHeight="471.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.addressbook.AppController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" text="New" />
              <MenuItem mnemonicParsing="false" text="Close" />
                  <Menu mnemonicParsing="false" text="New from Template">
                    <items>
                      <MenuItem mnemonicParsing="false" text="AlertDialog" />
                        <MenuItem mnemonicParsing="false" text="Basic Application" />
                    </items>
                  </Menu>
                  <CheckMenuItem mnemonicParsing="false" text="Show Details" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#exitButton" text="Exit">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Insert">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Modify">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Arrange">
               <items>
                  <MenuItem mnemonicParsing="false" text="Action 1" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Preview">
               <items>
                  <MenuItem mnemonicParsing="false" text="Action 1" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Window">
               <items>
                  <MenuItem mnemonicParsing="false" text="Action 1" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="Action 1" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
       <TextField fx:id="textField" prefWidth="200">
           <contextMenu>
               <ContextMenu>
                   <items>
                       <RadioMenuItem fx:id="first" onAction="#toggleContextText" text="Add random text">
                     <toggleGroup>
                        <ToggleGroup fx:id="toggleContextText" />
                     </toggleGroup></RadioMenuItem>
                       <RadioMenuItem fx:id="second" onAction="#toggleContextText" text="Clear" toggleGroup="$toggleContextText" />
                   </items>
               </ContextMenu>
           </contextMenu>
       </TextField>
      <HBox alignment="CENTER" prefHeight="420.0" prefWidth="900" spacing="20" style="-fx-background-color: #89CFF0;">

          <padding>
              <Insets bottom="20" left="20" right="20" top="20" />
          </padding>

          <VBox prefWidth="200" spacing="12" style="-fx-background-color:white; -fx-padding:20; -fx-background-radius:12; -fx-effect:dropshadow(gaussian,#0003,10,0.1,0,2);">

              <Label style="-fx-font-size:20px; -fx-font-weight:bold;" text="CheckBox" />

              <Label prefHeight="51.0" prefWidth="160.0" text="Обери характеристики:" wrapText="true" />

              <CheckBox fx:id="ChBPogod" text="Погодженість" />
              <CheckBox fx:id="ChBGnuch" text="Гнучкість" />
              <CheckBox fx:id="ChBDruz" text="Дружність" />
              <CheckBox fx:id="ChBSklad" text="Складність" />

              <Button maxWidth="Infinity" onAction="#checkBoxAnswer" style="-fx-background-color:#4a7bd4; -fx-text-fill:white;" text="Перевірити" />

              <Label fx:id="lblTrueAnswer" prefWidth="0.0" style="-fx-text-fill:#c00000; -fx-font-weight:bold;" wrapText="true" />
          </VBox>
          <VBox prefWidth="200" spacing="12" style="-fx-background-color:white; -fx-padding:20; -fx-background-radius:12; -fx-effect:dropshadow(gaussian,#0003,10,0.1,0,2);">

              <Label style="-fx-font-size:20px; -fx-font-weight:bold;" text="ChoiceBox" />

              <Label text="Оберіть правильну відповідь:" wrapText="true" />

              <ChoiceBox fx:id="choiceB" prefWidth="160" />

              <Button maxWidth="Infinity" onAction="#choiceBoxAnswer" style="-fx-background-color:#4a7bd4; -fx-text-fill:white;" text="Перевірити" />

              <Label fx:id="lblAnwerChoice" style="-fx-text-fill:#c00000; -fx-font-weight:bold;" wrapText="true" />
          </VBox>

          <VBox prefWidth="200" spacing="12" style="-fx-background-color:white; -fx-padding:20; -fx-background-radius:12; -fx-effect:dropshadow(gaussian,#0003,10,0.1,0,2);">

              <Label style="-fx-font-size:20px; -fx-font-weight:bold;" text="ComboBox" />

              <Label prefHeight="39.0" prefWidth="160.0" text="Оберіть компонент JavaFX:" wrapText="true" />

              <ComboBox fx:id="comboBox" prefWidth="160" />

              <Button maxWidth="Infinity" onAction="#comboBoxPressed" style="-fx-background-color:#4a7bd4; -fx-text-fill:white;" text="Перевірити" />

              <Label fx:id="lblAnwerCombo" style="-fx-text-fill:#c00000; -fx-font-weight:bold;" wrapText="true" />
          </VBox>

          <VBox prefWidth="200" spacing="12" style="-fx-background-color:white; -fx-padding:20; -fx-background-radius:12; -fx-effect:dropshadow(gaussian,#0003,10,0.1,0,2);">

              <Label style="-fx-font-size:20px; -fx-font-weight:bold;" text="RadioButton" />

              <Label prefHeight="38.0" prefWidth="160.0" text="Оберіть правильний варіант:" wrapText="true" />

              <RadioButton fx:id="radioCode" text="Code" />
              <RadioButton fx:id="radioHier" text="Hierarchy" />
              <RadioButton fx:id="radioLay" text="Layout" />
              <RadioButton fx:id="radioProp" text="Properties" />

              <Button maxWidth="Infinity" onAction="#RadioAnswer" style="-fx-background-color:#4a7bd4; -fx-text-fill:white;" text="Перевірити" />

              <Label fx:id="lblRadio" style="-fx-text-fill:#c00000; -fx-font-weight:bold;" wrapText="true" />
          </VBox>

      </HBox>
   </children>
</VBox>
